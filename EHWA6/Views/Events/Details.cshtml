@model EHWA6.Models.Events

@{
    ViewBag.Title = "Event Details";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title   </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/themes/base/images/ehalogocropped.png" />
        <meta name="viewport" content="width=device-width" />
        <style>
            .mysec {
                font-size:18px;

            }
            .nav-item {
                padding:10px;
            }
             .mysec a:hover{
                    text-decoration:none;
                    background-color:yellow;
                    padding:10px
                }
            #logo {
                margin-top:20px;
                font-weight:bold;
                font-size:40px;
				text-shadow:-25px 15px 4px red,
				25px -15px 4px purple,
				3px -5px 4px pink;
            }
        </style>
        </head>
    <body align="center">
        <header style="background-color:black;padding:10px">
                <div style="text-align:center">
                    <section class="mysec">
                        <ul class="nav justify-content-center">
                          <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("Add Organization","Create","Organization")
                          </li>
                          <li class="nav-item">
                              @Html.ActionLink("Add Events","Create","Events")
                          </li>  
                          <li class="nav-item">
                              @Html.ActionLink("Data","Data","Home")
                          </li>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                          <li class="nav-item" style="float:right">
                              @{Html.RenderPartial("_LoginPartial");}
                          </li>
                        </ul>
                    </section>
                </div>
        </header>

        <div class="container" style="margin-top:40px" align="center">
            <div class="card" style="background-color:antiquewhite;width:1000px">
              <div class="card-body">
                  <table cellpadding="5px" style="text-align:center">
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.orgs.OrganizationName)</th>
                          <td>@Html.DisplayFor(model => model.orgs.OrganizationName)</td>
                      </tr>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.EventName)</th>
                          <td>@Html.DisplayFor(model => model.EventName)</td>
                      </tr>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.EventDate)</th>
                          <td>@Html.DisplayFor(model => model.EventDate)</td>
                      </tr>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.EventTiming)</th>
                          <td>@Html.DisplayFor(model => model.EventTiming)</td>
                      </tr>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.EventDuration)</th>
                          <td>@Html.DisplayFor(model => model.EventDuration)</td>
                      </tr>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.EventVenue)</th>
                          <td>@Html.DisplayFor(model => model.EventVenue)</td>
                      </tr>
                      <tr>
                          <th>@Html.DisplayNameFor(model => model.EventCapacity)</th>
                          <td>@Html.DisplayFor(model => model.EventCapacity)</td>
                      </tr>
                      <tr>
                          <td>@Html.ActionLink("Edit", "Edit", new { id = Model.EventsId }, new { @class = "btn btn-outline-warning" })</td>
                          <td>@Html.ActionLink("Events List", "Index",null,new {@class="btn btn-primary"})</td>
                      </tr>
                  </table>
                  </div>
                </div>
            </div>
        </body>
    </html>