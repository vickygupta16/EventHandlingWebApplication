@model IEnumerable<object>
@{
    List<EHWA6.Models.UserProfile> lstup = Model.ToList()[0] as List<EHWA6.Models.UserProfile>;
    List<EHWA6.Models.Organization> lstorg = Model.ToList()[1] as List<EHWA6.Models.Organization>;
    List<EHWA6.Models.Events> lstevs = Model.ToList()[2] as List<EHWA6.Models.Events>;
    List<EHWA6.Models.Volunteer> lstvol = Model.ToList()[3] as List<EHWA6.Models.Volunteer>;
}
@{
    ViewBag.Title = "Data List";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/themes/base/images/ehalogocropped.png" />
        <meta name="viewport" content="width=device-width" />
        <style>
            .mysec {
                font-size:18px;
                
            }
            .nav-item {
                padding:10px;
            }
             .mysec a:hover{
                    text-decoration:none;
                    background-color:yellow;
                    padding:10px
                }
            #logo {
                margin-top:20px;
                font-weight:bold;
                font-size:40px;
				text-shadow:-25px 15px 4px red,
				25px -15px 4px purple,
				3px -5px 4px pink;
            }
        </style>
        </head>
    <body align="center">
        <header style="background-color:black;padding:10px">
                <div style="text-align:center;">
                    <section class="mysec">
                        <ul class="nav justify-content-center">
                          <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home")
                          </li>
                          <li class="nav-item">
                              @Html.ActionLink("Data","Data","Home")
                          </li>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                          <li class="nav-item" style="float:right">
                              @{Html.RenderPartial("_LoginPartial");}
                          </li>
                        </ul>
                    </section>
                </div>
       
        </header>
<div class="container" style="margin-top:40px" align="center">
        <div class="card" style="background-color:lightblue;width:1000px">
            <div class="card-body">
            <h3>User Accounts</h3>
            <table style="border:3px solid black;text-align:center" rules="cols">
                <tr>
                    <th>ID</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mobile</th>
                    <th>Gender</th>
                    <th>Age</th>
                </tr>
                @foreach(var item in lstup)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Mobile</td>
                        <td>@item.Gender</td>
                        <td>@item.Age</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="container" style="margin-top:40px" align="center">
    <div class="card" style="background-color:lightcoral;width:1000px">
        <div class="card-body">
            <h3>Organizations</h3>
            <table style="border:3px solid black;text-align:center" rules="cols">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Address</th>
                </tr>
                @foreach(var item in lstorg)
                {
                    <tr>
                        <td>@item.OrganizationId</td>
                        <td>@item.OrganizationName</td>
                        <td>@item.OrganizationEmail</td>
                        <td>@item.OrganizationContact</td>
                        <td>@item.OrganizationAddress</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="container" style="margin-top:40px" align="center">
    <div class="card" style="background-color:lightgreen;width:1000px">
        <div class="card-body">
            <h3>Events</h3>
            <table style="border:3px solid black;text-align:center" rules="cols">
                <tr>
                    <th>Organization</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Duration</th>
                    <th>Venue</th>
                    <th>Capacity</th>
                </tr>
                @foreach(var item in lstevs)
                {
                    <tr>
                        <td>@item.orgs.OrganizationName</td>
                        <td>@item.EventsId</td>
                        <td>@item.EventName</td>
                        <td>@item.EventDate</td>
                        <td>@item.EventTiming</td>
                        <td>@item.EventDuration</td>
                        <td>@item.EventVenue</td>
                        <td>@item.EventCapacity</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="container" style="margin-top:40px" align="center">
   <div class="card" style="background-color:lightgray;width:1000px">
     <div class="card-body">
            <h3>Volunteers</h3>
            <table style="border:3px solid black;text-align:center" rules="cols">
                <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>Organization Name</th>
                    <th>Event Name</th>
                </tr>
                @foreach(var item in lstvol)
                {
                    <tr>
                        <td>@item.VolunteerId</td>
                        <td>@item.ups.UserName</td>
                        <td>@item.evs.orgs.OrganizationName</td>
                        <td>@item.evs.EventName</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
        <br />
        </body>
    </html>