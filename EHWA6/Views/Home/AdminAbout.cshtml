        <style>
            .mysec {
                font-size:18px;

            }
            .nav-item {
                padding:10px;
            }
             .mysec a:hover{
                    text-decoration:none;
                    background-color:yellow;
                    padding:5px
                }
        </style>
        </head>
    <body align="center">
        <header style="background-color:black;padding:10px">
                <div style="text-align:center">
                    <section class="mysec">
                        <ul class="nav justify-content-center">
                          <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("Add Organization","Create","Organization")
                          </li>
                          <li class="nav-item">
                              @Html.ActionLink("Add Events","Create","Events")
                          </li>  
                          <li class="nav-item">
                              @Html.ActionLink("Data","Data","Home")
